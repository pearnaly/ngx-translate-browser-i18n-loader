{
  "compileOnSave": false,
  "buildOnSave":  false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "paths": {
      "@pearnaly/ngx-translate-browser-i18n-loader": [
        "dist"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "node_modules/web-ext-types"
    ],
    "lib": [
      "DOM",
      "ES2020"
    ]
  }
}
