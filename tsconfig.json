{
  "compileOnSave": false,
  "buildOnSave":  false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": false,
    "declaration": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2020",
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "lib": [
      "dom",
      "es2020"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.test.ts"
  ]
}
