{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2020",
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "removeComments": true,
    "lib": [
      "dom",
      "es2020"
    ]
  }
}
